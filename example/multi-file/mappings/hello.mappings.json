{
  "@type": "mappings",
  "mappings": [
    {
      "@comment": {
        "en": "the mappings rendered by the template applying will be matched first, to override the next @any mapping",
        "cn": "该模板应用所渲染的映射将会首先进行匹配，覆盖之后的 @any 映射"
      },
      "@template": "template/hello-method-not-allowed.template.json",
      "vars": [
        {
          "method": "OPTIONS"
        },
        {
          "method": "HEAD"
        },
        {
          "method": "TRACE"
        },
        {
          "method": "CONNECT"
        },
        {
          "method": "PATCH"
        },
        {
          "method": "DELETE"
        }
      ]
    },
    {
      "@comment": {
        "method": {
          "en": "optional, the default value is @any which matches any method",
          "cn": "选填，默认值为 @any，@any 表示匹配任意方法(method)"
        }
      },
      "uri": "/api/hello",
      "method": "@any",
      "policies": [
        {
          "when": {
            "params": {
              "lang": [
                "en",
                "cn"
              ]
            }
          },
          "returns": {
            "headers": {
              "Server": "HelloMock/1.0",
              "Content-Type": "application/json; charset=utf8"
            },
            "body": "{\"code\": 2000, \"message\": \"Hello, 世界!\"}"
          }
        },
        {
          "when": {
            "params": {
              "lang": "cn"
            }
          },
          "returns": {
            "headers": {
              "Server": "HelloMock/1.0",
              "Content-Type": "application/json; charset=utf8"
            },
            "body": "{\"code\": 2000, \"message\": \"你好，世界！\"}"
          }
        },
        {
          "returns": {
            "headers": {
              "Server": "HelloMock/1.0",
              "Content-Type": "application/json; charset=utf8"
            },
            "body": "{\"code\": 2000, \"message\": \"Hello, World!\"}"
          }
        }
      ]
    }
  ]
}