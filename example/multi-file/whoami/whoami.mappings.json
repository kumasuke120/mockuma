{
  "@type": "mappings",
  "mappings": [
    {
      "uri": "/",
      "policies": {
        "returns": {
          "@comment": {
            "en": "redirects to /whoami permanently",
            "cn": "永久跳转到 /whoami"
          },
          "statusCode": 301,
          "headers": {
            "Location": "/whoami"
          }
        }
      }
    },
    {
      "uri": "/whoami",
      "method": "GET",
      "policies": {
        "returns": {
          "headers": {
            "Content-Type": "text/html; charset=utf8"
          },
          "body": {
            "@comment": {
              "path": {
                "en": "all paths are relative to the main file 'mockuMappings.main.json'",
                "cn": "所有路径都是相对于主入口文件 'mockuMappings.main.json' 的"
              },
              "@file": {
                "en": "includes the content of the file through given path",
                "cn": "通过给定路径引入文件内容"
              }
            },
            "@file": "whoami/whoami.html"
          }
        }
      }
    }
  ]
}