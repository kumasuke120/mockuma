{
  "@type": "template",
  "template": {
    "when": {
      "params": {
        "username": "@{username}"
      },
      "headers": {
        "Authorization": "Basic @{authToken}"
      }
    },
    "returns": {
      "headers": {
        "Content-Type": "application/json; charset=utf8"
      },
      "body": {
        "@comment": "'@{}' is the placeholder for @vars",
        "code": 2000,
        "message": "Welcome, @{username}!"
      }
    }
  }
}