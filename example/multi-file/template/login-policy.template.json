{
  "@type": "template",
  "template": {
    "when": {
      "params": {
        "username": "@{username}"
      },
      "headers": {
        "Authorization": "Basic @{authToken}"
      }
    },
    "returns": {
      "headers": {
        "Content-Type": "application/json; charset=utf8"
      },
      "body": {
        "@comment": {
          "en": "'@{}' is the placeholder for variables",
          "cn": "'@{}' 是变量占位符"
        },
        "code": 2000,
        "message": "Welcome, @{username}!"
      }
    }
  }
}